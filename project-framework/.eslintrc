{
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
      "strict": 0,
      "semi": [2, "never"],
      "indent": ["error", 2],
      "linebreak-style": 0,
      "no-const-assign": "warn",
      "no-this-before-super": "warn",
      "no-multi-spaces": 1,
      "no-multiple-empty-lines": [1, {"max": 1}],
      "no-undef": "warn",
      "no-unreachable": "warn",
      "no-unused-vars": "warn",
      "constructor-super": "warn",
      "valid-typeof": "warn",
      "comma-dangle": ["error", {
        "arrays": "never",
        "objects": "never",
        "functions": "never"
      }]
    }
  }